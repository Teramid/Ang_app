<Irregular_Menu>:
    canvas.before:
        Color:
            rgb: (0.3, 0.3,0.3)
        Rectangle:
            size: self.width, self.height
            pos: self.x, self.y
    Label:
        text: "Wybierz poziom"
        font_size: 30
        text_size: self.size
        halign: 'center'
        valign: 'middle'
        size_hint: 1060/1080, 280/1920
        pos_hint: {'x':15/1080, 'y':1580/1920}
        canvas.before:
            Color:
                rgb: (0.4,0.4,0.4)
            Rectangle:
                size: self.width, self.height
                pos: self.x, self.y
    BoxLayout:
        size_hint: 1060/1080, 1240/1920
        pos_hint: {'x':15/1080, 'y':300/1920}
        orientation: "vertical"
        spacing: 1
        padding: 5, 5, 5, 5
        canvas.before:
            Color:
                rgb: (0.4,0.4,0.4)
            Rectangle:
                size: self.width, self.height
                pos: self.x, self.y 
        BoxLayout:
            orientation: "vertical"
            spacing: 1
            padding: 5, 5, 5, 5
            Label:
                text:"Ilość powtórzeń:"
                font_size: 20
                halign: 'center'
                valign: 'middle'
            TextInput:
                id: text_repeat
                text: '3'
                font_size: 20
                size_hint_x: 300/1080
                size_hint_y: 0.5
                pos_hint: {'x':390/1080}
                halign: 'center'
                valign: 'middle'
                write_tab: False
                multiline: False
                disabled: False  
        Button:
            text: "Poziom A1 - A2"
            font_size: 20
            on_release: root.button_A_down()
            canvas.before:
                Color:
                    rgb: (0.1, 0.1, 0.1)
        Button:
            text: "Poziom B1 - B2"
            font_size: 20
            on_release: root.button_B_down()
            canvas.before:
                Color:
                    rgb: (0.1, 0.1, 0.1)
        Button:
            text: "Poziom C1 - C2"
            font_size: 20
            on_release: root.button_C_down()
            canvas.before:    
                Color:
                    rgb: (0.1, 0.1, 0.1)

